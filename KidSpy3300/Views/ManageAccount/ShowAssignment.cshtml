@{
    ViewData["Title"] = "Viewing " + @Model.Assignment.Name;
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
}

@using DAL.Model
@using KidSpy3300.Models
@model KidSpy3300.Models.ShowAssignmentModel

<h2 class="manage-title">Assignment</h2>

<div class="row">
    <div class="offset-md-3"></div>
    <div class="col-12 col-md-6">
        <div class="my-box-shadow">
            <div class="my-box-title">
                <h5>@Model.Assignment.Name</h5>
            </div>
            <div class="my-box">
                @for(var i=0;i<Model.Marks.Count;i++)
                {
                <div class="border-bottom">
                    <i class="float-right mt-2"></i>
                    <span class="font-weight-bold">
                        <span class="mark-big-size mark-color-@Model.Marks[i].MarkType">
                            @Model.Marks[i].MarkType
                        </span>
                        @Model.Students[i].Name @Model.Students[i].LastName
                    </span>
                </div>
                }
                <div class="float-right-button-holder">
                    <div class="float-right-button-holder">
                        <a id="go-back" class="float-left btn btn-secondary mt-4" asp-controller="ManageAccount" asp-action="Index">
                            <span class="fa fa-chevron-left"></span>
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>